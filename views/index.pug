extends layout

block content
  h1= title
  p Welcome to #{title} working on pug files
  button(type="button", class="btn btn-secondary") press me

  div(id = "target") Clap for me
  script.

    var clap_count=0;
    
    function moreClaps() {
      clap_count=clap_count+2;
      document.getElementById("target").innerHTML=`Value now ${clap_count}`;
    }